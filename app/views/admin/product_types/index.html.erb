<%= provide :title, t("admin.product_types") %>
<h1><%= t "admin.product_types" %></h1>
<%= link_to new_admin_product_type_path do %>
  <div class="btn btn-success">
    <%= t "admin.product_type.new" %>
    <i class="glyphicon glyphicon-plus"></i>
  </div>
<% end %>
<br/ >
<br/ >
<table class="table">
  <thead>
     <tr>
      <th><%= t "admin.id" %></th>
      <th><%= t "admin.town.name" %>
        <i class="glyphicon glyphicon-tower"></i></th>
      <th><%= t "admin.town.city" %>
        <i class="glyphicon glyphicon-equalizer"></i></th>
      <th style="background-color: #d8e09a; width:50px; text-align:center">
        <i class="glyphicon glyphicon-wrench"></i></th>
      <th style="background-color: #c19a56; width:50px; text-align:center">
        <i class="glyphicon glyphicon-trash"></i></th>
    </tr>
  </thead>
  <tbody>
    <%= render @product_types %>
  </tbody>
</table>
<%= paginate @product_types, theme: "twitter-bootstrap-3" %>
