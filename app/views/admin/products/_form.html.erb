<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for [:admin, @product] do |f| %>
      <%= render "shared/error_messages", object: @product %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control" %>

      <%= f.label :product_type %>
      <%= f.select :product_type_id, options_from_collection_for_select(
        @product_types, :id, :name, selected: @product.product_type_id),
        {include_blank: true}, class: "form-control" %>

      <%= f.label :product_color %>
      <%= f.select :product_color_id, options_from_collection_for_select(
        @product_colors, :id, :name, selected: @product.product_color_id),
        {include_blank: true}, class: "form-control" %>

      <%= f.label :description %>
      <%= f.cktext_area :description, class: "someclass" %>

      <%= f.label :location %>
      <%= f.text_field :location, class: "form-control" %>
      
      <%= f.fields_for :product_images do |product_image_field| %>
        <%= render "product_image_field", f: product_image_field %>
      <% end %>
      <%= link_to_add_fields "Add other product images",
        f, :product_images %>
      <br />
      <div class="col-md-4 col-md-offset-4">      
        <%= f.submit yield(:submit), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
